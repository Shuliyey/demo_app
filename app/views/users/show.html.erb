<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<table>
	<thead>
	<tr>
		<th>ID</th>
		<th>Content</th>
		<th colspan="3"></th>
	</tr>
	</thead>
	<tbody>
		<% @user.microposts.each do |micropost| %>
			<tr>
				<td><%= link_to micropost.id, micropost %></td>
				<td><%= micropost.content %></td>
				<td><%= link_to "edit", edit_micropost_path(micropost) %></td>
				<td><%= link_to "delete", micropost, data: { confirm: 'you sure?'}, :method => :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
